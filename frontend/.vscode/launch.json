    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Django)",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "localhost:8000",
                "--noreload"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "manage.py",
            "python": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}/backend/src",
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Frontend (Angular)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "ng",
            "runtimeArgs": [
                "serve"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "ðŸš€ Full Stack (Backend + Frontend)",
            "configurations": [
                "Backend (Django)",
                "Frontend (Angular)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            }
        }
    ]
}